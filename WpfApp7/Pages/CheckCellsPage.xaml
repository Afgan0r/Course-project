<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp7.Pages"
      xmlns:WpfApp7="clr-namespace:WpfApp7" x:Class="WpfApp7.Pages.CheckCellsPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CheckCellsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Name="CheckCellWithFloorDataGrid" Grid.Column="1" />
        <StackPanel Grid.Column="0">
            <StackPanel>
                <Label Content="Этаж" HorizontalAlignment="Center" Style="{StaticResource LabelFontStyle}" Margin="0,10,0,5"/>
                <ComboBox Width="40"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Номер ячейки" HorizontalAlignment="Center" Style="{StaticResource LabelFontStyle}" Margin="0,10,0,5"/>
                <ComboBox Width="40"/>
            </StackPanel>
            <Button Name="ShowFilteredCells" Content="Отобразить" Margin="0,10,0,10" Width="80" Style="{StaticResource ButtonFontStyle}"/>
        </StackPanel>
    </Grid>
</Page>
